<LoginScreen>:
    name: "login"

    gmail: gmail
    app_pass: app_pass

    FloatLayout:
        Label:
            text: 'GMAIL'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.78}
            font_size: 18
            color: '#8a8a8a'
        TextInput:
            id: gmail
            multiline: False
            size_hint: (.65, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        Label:
            text: 'APP PASSWORD'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            font_size: 18
            color: '#8a8a8a'
        TextInput:
            id: app_pass
            multiline: False
            password: True
            size_hint: (.65, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            text: 'ADD ACCOUNT'
            background_color: '#0377fc'
            background_normal: ''
            size_hint: (0.9, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.32}
            on_release:
                root.add_account()
                root.reset_send()
                root.manager.transition.direction = "up"

        Button:
            text: 'LOGIN'
            background_color: '#0377fc'
            background_normal: ''
            size_hint: (0.9, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            on_release:
                root.login()
                root.reset_send()
                root.manager.transition.direction = "up"

        Button:
            text: 'Help'
            font_size: 12
            size_hint: (0.1, 0.05)
            pos_hint: {'top': 1, 'x': 0}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = 'help_login'

        Label:
            text: 'THIS INFORMATION IS NOT SHARED'
            color: '#424242'
            bold: True
            font_size: 8
            size_hint: (.5, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}

<SendScreen>:
    name: 'send'

    gmail: gmail
    mobile: mobile
    carrier: carrier
    message: message
    number: number

    FloatLayout:
        Label:
            id: gmail
            size_hint: (0.5, 0.1)
            pos_hint: {'top': .975, 'x': 0.25}
            font_size: 10
            color: '#adadad'
        Button:
            text: 'Switch Account'
            font_size: 12
            size_hint: (0.2, 0.05)
            pos_hint: {'top': 1, 'x': (0.5 * 0.8)}
            on_release:
                root.manager.transition.direction = "down"
                root.reset_previous()
                root.manager.current = 'login'

        Label:
            text: 'MOBILE'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.27, 'center_y': 0.83}
            font_size: 18
            color: '#8a8a8a'
        TextInput:
            id: mobile
            multiline: False
            size_hint: (.19, 0.1)
            pos_hint: {'center_x': 0.27, 'center_y': 0.75}
        Label:
            text: 'No \'-\', spaces, or country codes'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.25, 'center_y': 0.685}
            font_size: 10
            color: '#8a8a8a'

        Label:
            text: 'CARRIER'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.73, 'center_y': 0.83}
            font_size: 18
            color: '#8a8a8a'
        TextInput:
            id: carrier
            multiline: False
            size_hint: (.19, 0.1)
            pos_hint: {'center_x': 0.73, 'center_y': 0.75}

        Label:
            text: 'MESSAGE'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.66}
            font_size: 18
            color: '#8a8a8a'
        TextInput:
            id: message
            multiline: True
            size_hint: (.65, 0.4)
            pos_hint: {'center_x': 0.5, 'center_y': 0.42}

        Label:
            text: '# TO SEND'
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.83}
            font_size: 18
            color: '#8a8a8a'
        TextInput:
            text: '1'
            id: number
            color: '#8a8a8a'
            size_hint: (0.1, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
        Button:
            text: '+'
            size_hint: (0.05, 0.1)
            pos_hint: {'center_x': 0.43, 'center_y': 0.75}
            on_release: root.add_one()
        Button:
            text: '-'
            size_hint: (0.05, 0.1)
            pos_hint: {'center_x': 0.57, 'center_y': 0.75}
            on_release: root.sub_one()

        Button:
            text: 'SEND'
            background_color: '#0377fc'
            background_normal: ''
            size_hint: (0.9, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.12}
            on_release:
                root.send_message()
                root.manager.transition.direction = "up"

        Button:
            text: 'Reset All'
            font_size: 12
            size_hint: (0.17, 0.05)
            pos_hint: {'top': 0.94, 'x': 0.83}
            on_release:
                root.reset_all()
        Button:
            text: 'Reset Message'
            font_size: 12
            size_hint: (0.17, 0.05)
            pos_hint: {'top': 1, 'x': 0.83}
            on_release:
                root.reset_message()

        Button:
            text: 'Help'
            font_size: 12
            size_hint: (0.1, 0.05)
            pos_hint: {'top': 1, 'x': 0}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = 'help_send'

        Label:
            text: 'THIS INFORMATION IS NOT SHARED'
            color: '#424242'
            bold: True
            font_size: 8
            size_hint: (.5, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.03}

<ConfirmScreen>:
    name: 'confirmed'

    gmail: gmail
    # app_pass: app_pass
    message: message
    mobile: mobile
    carrier: carrier
    number: number

    FloatLayout:
        Button:
            text: 'Back to Send'
            font_size: 12
            size_hint: (0.2, 0.05)
            pos_hint: {'top': 1, 'x': (0.5 * 0.8)}
            on_release:
                root.manager.transition.direction = "down"
                root.manager.current = 'send'
        Button:
            text: 'Help'
            font_size: 12
            size_hint: (0.1, 0.05)
            pos_hint: {'top': 1, 'x': 0}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = 'help_confirmed'
        Label:
            text: 'THIS INFORMATION IS NOT SHARED'
            color: '#424242'
            bold: True
            font_size: 8
            size_hint: (.5, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.03}
        Label:
            text: 'Message'
            font_size: 20
            underline: True
            color: '#8a8a8a'
            pos_hint: {'center_x': 0.75, 'center_y': 0.8}

    GridLayout:
        cols: 2
        padding: 40
        spacing: 10
        GridLayout:
            rows: 5
            cols: 1
            
            Label:
                text: 'Send Info'
                font_size: 20
                underline: True
                color: '#8a8a8a'
            Button:
                id: gmail
                bold: True
                color: '#8a8a8a'
            Button:
                id: number
                bold: True
                color: '#8a8a8a'
            Button:
                id: mobile
                bold: True
                color: '#8a8a8a'
            Button:
                id: carrier
                bold: True
                color: '#8a8a8a'
                
        GridLayout:
            cols: 1
            padding: [0, 30, 0, 0]
            ScrollView:
                size_hint: (1, 1)
                Label:
                    id: message
                    italic: True
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    multiline: True
                    color: '#8a8a8a'

